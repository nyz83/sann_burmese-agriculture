---
import NavBar from '../components/NavBar.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
}

const { title = 'အပင်စိုက်နည်း၊ ထိန်းသိမ်းနည်း' } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <meta
      name='description'
      content='အပင်စိုက်နည်းတွေ၊ ထိန်းသိမ်းနည်းတွေ လေ့လာကြည့်ကြမယ်'
    />
    <link
      rel='icon'
      href='/favicon.svg'
    />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class='bg-gray-100'>
    <NavBar />
    <main
      transition:animate='initial'
      class='container mx-auto max-w-screen-xl my-10 px-8'>
      <slot />
    </main>
  </body></html
>
